{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}

